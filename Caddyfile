https://nfd-nightly-apt.ndn.today {
  root * /home/web/NFD-nightly-apt/public
  file_server {
    hide {http.vars.root}/*/conf {http.vars.root}/*/db
    browse
  }

  header {
    -Server
    Strict-Transport-Security max-age=2592000
    Content-Security-Policy "default-src https: 'unsafe-inline'"
    X-Frame-Options SAMEORIGIN
    X-Content-Type-Options nosniff
    Referrer-Policy no-referrer-when-downgrade
    Access-Control-Allow-Origin *
  }

  log {
    output file /var/log/caddy/nfd-nightly-apt.log {
      roll_size 32MiB
      roll_keep 5
    }
    format filter {
      wrap json
      fields {
        request>tls delete
        request>client_ip delete
        request>remote_ip ip_mask {
          ipv4 24
          ipv6 48
        }
        request>remote_port delete
        user_id delete
        resp_headers delete
        common_log delete
      }
    }
  }
}
